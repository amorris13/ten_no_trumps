<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:baselineAligned="false"
	android:orientation="horizontal" >

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="horizontal"
		android:padding="5dp" >

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:orientation="vertical"
			android:paddingLeft="5dp" >

			<TextView
				android:id="@+id/team1trickswon"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="@dimen/hands_list_tricks_won_text_size" />

			<TextView
				android:id="@+id/team1scorechange"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="@dimen/hands_list_score_change_text_size" />
		</LinearLayout>

		<TextView
			android:id="@+id/team1scoreAfterBid"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:textSize="@dimen/hands_list_cumulative_score_text_size" />

		<TextView
			android:id="@+id/team1bid"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:paddingLeft="5dp"
			android:textSize="@dimen/hands_list_bid_text_size" />
	</RelativeLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center"
		android:text="@string/score_divider"
		android:textSize="@dimen/match_list_team_name_text_size" />

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="horizontal"
		android:padding="5dp" >

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:orientation="vertical"
			android:paddingLeft="5dp" >

			<TextView
				android:id="@+id/team2trickswon"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="@dimen/hands_list_tricks_won_text_size" />

			<TextView
				android:id="@+id/team2scorechange"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="@dimen/hands_list_score_change_text_size" />
		</LinearLayout>

		<TextView
			android:id="@+id/team2scoreAfterBid"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:textSize="@dimen/hands_list_cumulative_score_text_size" />

		<TextView
			android:id="@+id/team2bid"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:paddingLeft="5dp"
			android:textSize="@dimen/hands_list_bid_text_size" />
	</RelativeLayout>

</LinearLayout>